FROM node:18

WORKDIR /app

# Kopiujemy package.json i package-lock.json
COPY package*.json ./

# Instalujemy zależności
RUN npm install

# Kopiujemy resztę plików
COPY . .

# Otwieramy port 3000
EXPOSE 3000

# Start w trybie developerskim (hot reload + Tailwind CSS)
CMD ["npm", "start", "--", "--host", "0.0.0.0"]
